script
  function showDiv(){
    document.getElementById('searchResultsDiv').style = "display:all";
  }

div
  form(name="searchForm", action="", method="get").center.well.search-form
    div
      input(type='text', name='searchInput', placeholder='ex. Dickens').input-xlarge.search-query
    button(type='submit', onclick="showDiv()").btn.btn-primary Search

div(id="searchResultsDiv", style="display:all;")
  div.row-fluid
    each item in questions
      ul
        form.well
          li(type="none")
            != 'Difficulty: '
            != item.difficulty
            != ' | '
            != 'Year: '
            != item.year
            != ' | '
            != 'Category: '
            != item.category
            != ' | '
            != 'Tournament: '
            != item.tournament
          hr
          li(type="none")
            != 'Question: '
            != item.question
          hr
          li(type="none")
            != 'Answer: '
            != item.answer
