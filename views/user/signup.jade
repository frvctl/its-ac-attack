h1 Sign Up

div.row
    div.span6.offset3
        form(accept-charset="UTF-8", action="/signup", class="new_user",
            id="new_user", method="post")
                label(for="user_name") Name:
                input(id="user_name", name="user[name]", size="30", 
                	type="text")

                label(for="user_email") Email:
                input(id="user_email", email="user[email]", size="30", 
                	type="text")

                label(for="user_password") Password:
                input(id="user_password", user="user[password]", size="30", 
                	type="password")

                label(for="user_password_confirmation") Confirmation:
                input(id="user_password_confirmation", name="user[password_confirmation]",
                    size="30", type="password")

                input(name="commit", type="submit", value="Create my Account!").btn.btn-large.btn-primary


